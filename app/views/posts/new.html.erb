<div class="cover-container d-flex mx-auto flex-column">
  <div class="post_container">
    <div class="new_card">
      <iframe src="https://open.spotify.com/embed/track/<%= @track_id %>?utm_source=generator" 
        width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy">
      </iframe>

      <div class="post_form mt-4">
        <%= form_with model: @post, local: true do |f| %>
          <div class="form-group">
            <%= f.hidden_field :track_id, value: @track_id %>
          </div>
          <div class="form-group">
            <i class="fa-regular fa-circle-down"></i>
            <%= f.label :emotional_state, "この曲を聴くときはどんなとき？" %>
            <%= f.select :emotional_state, Post.emotional_states_i18n.invert, { include_blank: '選択してください'}, class: 'form-control select_form' %>
          </div>
          <div class="form-group">
            <i class="fa-solid fa-pen"></i>
            <%= f.label :body, "上記のとき、なぜこの曲を聴くのか？" %>
            <%= f.text_area :body, class: 'form-control', rows: 3 %>
          </div>

          <div class="mt-5 text-center">
            <%= f.submit "投稿", class:'btn-share' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
