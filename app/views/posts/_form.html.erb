<div class="post_form mt-4">
  <%= form_with model: post, local: true do |f| %>
    <div class="form-group">
      <%= f.hidden_field :track_id, value: track_id %>
    </div>
    <div class="form-group">
      <i class="fa-regular fa-circle-down"></i>
      <%= f.label :emotional_state %><br>
      <%= f.select :emotional_state, Post.emotional_states_i18n.invert, { include_blank: '選択してください'}, class: 'select_form' %>
    </div>
    <div class="form-group">
      <i class="fa-solid fa-pen-to-square"></i>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 3 %>
    </div>

    <div class="mt-5 text-center">
      <%= f.submit "投稿", class:'btn-share' %>
    </div>
  <% end %>
</div>
