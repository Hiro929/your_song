<div class="container mt-auto">
  <div class="search text-center">
    <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
      <%= f.text_field :track, placeholder: "曲名、アーティスト名", value: @search_params %>
      <%= f.submit "検索" %>
    <% end %>
  </div>

  <div class="result2">
    <div class="row2">
      <% if @tracks.present? %>
        <% @tracks.each do |track| %>
          <div class="col-md-4">
            <div class="mb-4 mx-4">
              <iframe src="https://open.spotify.com/embed/track/<%= track.id %>?utm_source=generator" 
                width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy">
              </iframe>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
