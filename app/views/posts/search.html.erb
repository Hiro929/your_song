<% content_for(:title, t('.title')) %>
<div class="container mt-auto">
  <div class="text-center mt-4">
    <h4>投稿する楽曲を検索しよう！</h4>
  </div>
  <div class="search text-center">
    <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
      <%= f.text_field :track, placeholder: "曲名、アーティスト名など", size: 25, value: @search_params %>
      <button type="submit", class="btn-search" >
        <i class="fa-solid fa-magnifying-glass"></i>検索
      </button>
    <% end %>
  </div>

  <div class="result2">
    <div class="row2 mt-2">
      <% if @tracks.present? %>
        <% @tracks.each do |track| %>
          <div class="col-md-4 mt-4">
            <div class="mb-4 mx-3">
              <iframe src="https://open.spotify.com/embed/track/<%= track.id %>?utm_source=generator" 
                width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy">
              </iframe>
              <div class="mt-4 text-center">
                <%= link_to new_post_path(track_id: track.id), class: 'btn-share' do %>
                  <i class="fa-solid fa-share"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
