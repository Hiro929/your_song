<% content_for(:title, t('.title')) %>
<div class="cover-container d-flex mx-auto mt-auto flex-column">
  <div class="login_card">
    <h4 class="text-center"><i class="fa-regular fa-user"></i> ユーザー登録</h4>
    <div class="login_form">
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <i class="fa-regular fa-user"></i>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fa-regular fa-envelope"></i>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fa-solid fa-music"></i>
          <%= f.label :best_song, "SUPER BEAVERで一番好きな曲（任意）"%>
          <%= f.text_field :best_song, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fa-solid fa-lock"></i>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fa-solid fa-lock"></i>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="register_button">
          <%= f.submit "登録", class: 'btn-user' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
